# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Windows scripts should always use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Docker files should use LF
Dockerfile* text eol=lf
docker-compose*.yml text eol=lf

# JavaScript, TypeScript, and JSON
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Exclude files from exports
.gitattributes export-ignore
.gitignore export-ignore
.nvmrc export-ignore
