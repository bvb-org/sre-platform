DATABASE_URL=postgresql://sre_user:sre_password@postgres:5432/sre_platform

# AI Configuration (choose one)
# Option 1: Anthropic Claude (recommended for development)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Option 2: Google Gemini with Service Account JSON File
# To use Google Gemini, comment out ANTHROPIC_API_KEY above and:
# 1. Place your service account JSON file in the project root as 'google-service-account-key.json'
# 2. The application will automatically detect and use it
# No environment variable needed!

# Google Cloud Configuration (for Knowledge Graph features)
# Location for Vertex AI services (default: us-central1)
# Options: us-central1, europe-west1, asia-southeast1, etc.
GOOGLE_CLOUD_LOCATION=us-central1

PORT=3001
NODE_ENV=development

# Calendar Feature â€” API key for write operations and Azure DevOps freeze-check
# Generate a strong random string, e.g.: openssl rand -hex 32
CALENDAR_API_KEY=your_calendar_api_key_here
